{% extends 'base.html.twig' %}

{% block title %}Runners{% endblock %}

{% block body %}
<div class="runners-container js-filter">
    <div class="search-container js-filter-form">
        {{ form_start(form) }}
            {{ form_row(form.q) }}
            {{ form_row(form.departements) }}
            {{ form_row(form.levels) }}
            
            <div class="form-group">
                {{ form_label(form.sexe) }}
                {{ form_widget(form.sexe) }}
                {{ form_errors(form.sexe) }}
            </div>


           <div class="form-group age-range">
                <div style="display: inline-block; margin-right: 10px;">
                    {{ form_row(form.ageMin) }}
                </div>
                <div style="display: inline-block;">
                    {{ form_row(form.ageMax) }}
                </div>
            </div>

            <button type="submit">Filtrer</button>
        {{ form_end(form) }}

    </div>
    <div class="search-runners-container">
        <div class="d-flex justify-content-end mb-2 js-filter-sorting">
            {{knp_pagination_sortable(runners, 'Niveau', 'l.level')}}
            {# {{knp_pagination_sortable(runners, 'Ã‚ge', 'u.getAge')}} #}
        </div>
        <div class="grid js-filter-content">
            {% for runner in runners %}
            <div class="runner-card">
                <a href="{{ path('app_profil', {'id' :  runner.id}) }}">
                {{ runner.firstName }} {{ runner.lastName }} <br>
                {{ runner.city }} <br>
                {{ runner.getAge }} ans<br>
                Niveau : {{ runner.level.level}}
                </a>
            </div>
            {% endfor %}
        </div>
        <div class="js-filter-pagination">
            {% if runners %}
                
            {{ knp_pagination_render(runners) }}
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}