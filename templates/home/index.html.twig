{% extends 'base.html.twig' %}

{% block title %}Meet & Run{% endblock %}

{% block body %}
<style>
    
</style>

<div class="example-wrapper">
    <header>
        
        <figure>
            <img src="/img/logo.png" alt="Logo du site">
            <figcaption>Où chaque course commence par une rencontre</figcaption>
        </figure>
    </header>
    <main>
        <section class="section-container">
            <div class="circle">
                <i class="fas fa-running"></i>
                <p>Connecte toi à d'autres coureurs</p>
            </div>
            <div class="circle">
                <i class="fas fa-calendar-alt"></i>
                <p>Rejoins une course ou crée la tienne</p>
            </div>
            <div class="circle">
                <i class="fas fa-comments"></i>
                <p>Le forum des passionnés t'attend</p>
            </div>
        </section>
        <section class="events-container">
            <h2>Prochaines courses</h2>
            <div class="row justify-content-center">
                {% for event in events %}
                    <div class="col-md-3">
                        <div class="card event-card">
                            <img src="" class="card-img-top" alt="Image de l'événement">
                            <div class="card-body">
                                <h3 class="card-title">{{ event.name }}</h3>
                                <p class="card-text">Date : {{ event.dateEvent|date('d/m/Y H:i') }}</p>
                                <p class="card-text">{{ event.description }}</p>
                                <a href="#" class="btn btn-primary">Voir plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                
            </div>
            <a href="">
                <div>
                    <p>Connectez vous pour voir toutes les courses</p>
                </div>
            </a>
        </section>
        <section class="users-container">
            <h2>Bienvenue aux nouveau Runners</h2>
            <div class="users">
            {% for user in users %}
                <div class="circle-user">
                    <p>{{ user.firstName|slice(0,1) }} {{ user.lastName|slice(0,1) }}</p>
                </div>
            {% endfor %}
        </div>

        </section>
    </main>

</div>
{% endblock %}
